{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "singularName": "task",
    "pluralName": "tasks",
    "displayName": "Task",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "start_time": {
      "type": "datetime",
      "required": true
    },
    "end_time": {
      "type": "datetime",
      "required": true
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::project.project",
      "inversedBy": "tasks"
    },
    "actions": {
      "type": "dynamiczone",
      "components": [
        "task.follow-twitter",
        "task.invite-people",
        "task.join-discord",
        "task.like-tweet",
        "task.met-contribution-score",
        "task.retweet",
        "task.turn-on-notification"
      ]
    },
    "whitelist_num": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "reward": {
      "type": "component",
      "repeatable": false,
      "component": "task.reward",
      "required": true
    }
  }
}
